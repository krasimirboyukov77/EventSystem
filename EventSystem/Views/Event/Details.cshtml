@model DetailsEventViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event Details</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        #suggestions {
            position: absolute;
            border: 1px solid #ccc;
            background: white;
            max-height: 150px;
            overflow-y: auto;
            list-style: none;
            margin: 0;
            padding: 0;
        }

        #suggestions li {
            padding: 8px;
            cursor: pointer;
        }

        #suggestions li:hover {
            background: #f0f0f0;
        }

        .selected-person {
            margin: 5px 0;
        }

        #attendees li {
            margin: 5px 0;
        }
    </style>
</head>
<body>
    <h1>Event Details</h1>

    <div>
        <h2>@Model.Name</h2>
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Date:</strong> @Model.Date.ToString("MM/dd/yyyy HH:mm")</p>
        <p><strong>Location:</strong> @Model.Location</p>
    </div>

    <hr />

    <!-- Invited Section -->
    <div class="section">
        <h3>People Invited</h3>
        <ul id="invited">
            @foreach (var user in Model.PopleAttending)
            {
                if (user.AttendStatus == 1) // Invited
                {
                    <li>@user.Name</li>
                }
            }

            @if (Model.PopleAttending.All(u => u.AttendStatus != 1))
            {
                <p>No attendees yet</p>
            }
        </ul>
    </div>

    <!-- Attending Section -->
    <div class="section">
        <h3>People Attending</h3>
        <ul id="attendees">
            @foreach (var user in Model.PopleAttending)
            {
                if (user.AttendStatus == 2) // Attending
                {
                    <li>@user.Name</li>
                }
            }

            @if (Model.PopleAttending.All(u => u.AttendStatus != 2))
            {
                <p>No attendees yet</p>
            }
        </ul>
    </div>
    <hr />

    <input type="text" id="searchQuery" placeholder="Enter name or email to search..." />

    <!-- Search Button -->
    <button id="searchButton">Search</button>

    <!-- Area to display the results dynamically -->
    <div id="peopleList"></div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#searchButton").click(function () {
                var query = $("#searchQuery").val();

                // Make Ajax request to the SearchPeople action in the PeopleController
                $.ajax({
                    url: '@Url.Action("SearchPeople", "Event")', // Controller action URL
                    type: 'GET',
                    data: { term: query }, // Sending the search term
                    success: function (data) {
                        // Update the content inside #peopleList with the returned partial view
                        $("#peopleList").html(data);
                    },
                    error: function () {
                        alert("Error occurred while fetching data.");
                    }
                });
            });
        });
    </script>
</body>
</html>
