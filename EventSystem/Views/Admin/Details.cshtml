@model EventSystem.ViewModels.AdminViewModel.DetailsAdminViewModel

<h1>Details</h1>

<!-- Display Event Information -->
<div>
    <h3>@Model.EventName</h3>
    <p><strong>Description:</strong> @Model.EventDescription</p>
    <p><strong>Date:</strong> @Model.EventDate.ToString("yyyy-MM-dd HH:mm")</p>
    <p><strong>Location:</strong> @Model.EventLocation</p>
    <p><strong>Creator:</strong> @Model.UserEmail</p>
</div>

<!-- Display Attending Users -->
<hr />

<!-- Invited Section -->
<div class="section">
    <h3>People Invited</h3>
    <ul id="invited">
        @foreach (var user in Model.PopleAttending)
        {
            if (user.AttendStatus == 1) // Invited
            {
                <li>@user.Name</li>
            }
        }

        @if (Model.PopleAttending.All(u => u.AttendStatus != 1))
        {
            <p>No attendees yet</p>
        }
    </ul>
</div>

<!-- Attending Section -->
<div class="section">
    <h3>People Attending</h3>
    <ul id="attendees">
        @foreach (var user in Model.PopleAttending)
        {
            if (user.AttendStatus == 2) // Attending
            {
                <li>@user.Name</li>
            }
        }

        @if (Model.PopleAttending.All(u => u.AttendStatus != 2))
        {
            <p>No attendees yet</p>
        }
    </ul>
</div>
<hr />

